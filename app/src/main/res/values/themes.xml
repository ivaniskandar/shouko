<resources>
    <style name="Theme.Shouko" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">@bool/isLight</item>
        <item name="android:windowLightNavigationBar">@bool/isLight</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>
    <style name="Theme.Shouko.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>